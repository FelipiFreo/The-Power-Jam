<%# _selectbox.html.erb %>
<%= simple_form_for :player_selection do |f| %>

  <%= f.input :player_id,
              collection: Player.all.reject { |player| @temporary_chosen_players_array.include?(player.id) },
              # collection: @lista_filtrada,


              label_method: :calling_name,
              value_method: :id,
              include_blank: "digite",
              input_html: { id: 'playerSelectBox',
                            onchange: 'addPlayer(this.value)' } %>

<% end %>
