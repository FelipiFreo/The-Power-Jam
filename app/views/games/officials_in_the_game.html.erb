<head>

  <%= javascript_include_tag 'officials_in_the_game', 'data-turbolinks-track': 'reload'  %>

</head>


<%= simple_form_for :player_selection do |f| %>

  <%= f.input :player_id,
              collection: @players.reject { |player| @temporary_chosen_players_array.map(&:id).include?(player.id) },
              label_method: :calling_name,
              value_method: :id,
              include_blank: "digite",
              input_html: { id: 'playerSelectBox',
                            onchange: 'addPlayer({ id: this.value, calling_name: this.options[this.selectedIndex].text })' } %>

<% end %>

<div id="array-display"></div>
